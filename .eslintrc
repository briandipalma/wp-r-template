{
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "react/display-name": 1,

    "no-console": 2,
    "valid-jsdoc": [2, {"requireReturn": false, "requireParamDescription": false}],
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-floating-decimal": 2,
    "no-multi-str": 0,
    "no-process-env": 2,
    "no-self-compare": 2,
    "no-warning-comments": [2, { "terms": ["todo"], "location": "start" }],
    "wrap-iife": 2,
    "no-catch-shadow": 2,
    "no-use-before-define": [2, "nofunc"],
    "brace-style": [2, "1tbs"],
    "comma-style": [2, "last"],
    "func-style": [2, "declaration"],
    "no-lonely-if": 2,
    "no-multiple-empty-lines": [2, {"max": 1}],
    "no-nested-ternary": 2,
    "no-underscore-dangle": 0,
    "operator-assignment": [2, "always"],
    "padded-blocks": [2, "never"],
    "quote-props": [2, "as-needed"],
    "quotes": [2, "double", "avoid-escape"],
    "space-after-function-name": [2, "never"],
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"],
    "space-in-brackets": [2, "never"],
    "space-in-parens": [2, "never"],
    "spaced-line-comment": [2, "always", {"exceptions":["-","+","*"]}],
    "max-len": [2, 120, 4],
    "indent": [2, "tab", {"indentSwitchCase": true}],
    "space-before-function-parentheses": [2, "never"]
  }
}
